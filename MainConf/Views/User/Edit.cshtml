@model MainConf.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="PNFL" class="control-label">Pnfl</label>
        <input type="text" asp-for="PNFL" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label">Год рождения</label>
        <input type="number" asp-for="Position" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>