@model MainConf.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PNFL" class="control-label">Email</label>
        <input type="text" asp-for="PNFL" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label">Posation</label>
        <input type="password" asp-for="Position" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Is_active" class="control-label">Год рождения</label>
        <input type="number" asp-for="Is_active" class="form-control" autocomplete="off"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>