@model IEnumerable<MainConf.Models.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Год</th><th></th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td><a asp-controller="User" asp-route-id="@user.PNFL" asp-action="QRgen" type="button" class="btn btn-outline-secondary">
    @user.PNFL
</a></td>
   <td>
            <a asp-controller="User" asp-route-id="@user.Id" asp-action="Cardpage" type="button" class="btn btn-outline-secondary">
    Card
</a>
   </td>
            <td>@user.Position</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>