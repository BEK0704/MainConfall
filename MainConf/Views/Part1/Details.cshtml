@model MainConf.Models.Seconds.Questions

@{
    ViewData["Title"] = "Batafsil";
}

<div class="row">
    <div class="card col-sm-12  col-md-12 col-lg-12" style="margin-top:1%">
        <div class="card-header row">
            @if (Model.Actived == 0)
            {<div class="col-sm-3"><a asp-action="Active" asp-route-id="@Model.Id_part" class="btn btn-success">Aktivlashtirish</a> </div>}
            else
            {<div class="col-sm-3"> <a asp-action="Deactive" asp-route-id="@Model.Id_part" class="btn btn-warning">Deaktivlashtirish</a></div>}
            <div class="col-sm-3"><a asp-action="Edit" asp-route-id="@Model.Id_part" class="btn btn-primary">Tahrirlash</a> </div>
            <div class="col-sm-3"><button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-danger">O'chirish</button> </div>
        </div>
        <div class=" card-body row col-sm-12  col-md-12 col-lg-12">
            <dl class="row col-sm-12  col-md-12 col-lg-12">
                <dt class="col-sm-6">
                    Savol nazmuni
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-6">
                    Savol tili va darajasi
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Level)
                </dd>
                <dt class="col-sm-6">
                    Savol uchun ajratilgan vaqt
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Timeq) daqiqa
                </dd>
                <dt class="col-sm-3">
                    Savol:
                </dt>
                <dd class="col-sm-12 border border-info">
                    
                    @Html.Raw(Model.Question)
                </dd>

            </dl>
          
        </div>
    </div>
    <div class="card-footer"><a class="btn btn-light" asp-action="Index">Ortga</a></div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" id="exampleModalLabel">Siz savolni o'chirmoqchimisiz?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
           
            <div class="modal-footer">
                <form method="post" asp-action="DeleteConfirmed">
                    <input type="hidden" name="id" asp-for="Id_part" />
                    <input type="submit" value="Ha" class="btn btn-danger" />

                </form>
                <button type="button" class="btn btn-success" data-dismiss="modal">Yo'q</button>

            </div>
        </div>
    </div>
</div>