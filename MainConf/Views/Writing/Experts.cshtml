@model MainConf.Models.Seconds.SecondMarker
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
}
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />
<body class="hold-transition sidebar-mini layout-fixed">
    <header class="wrapper">

        <nav class="navbar navbar-expand " style=" background-color: #E7EAED; border-color: black; padding-left: 10%;">
            <ul class="navbar-nav flex-grow-1" style="min-width:550px;">
                <li class="nav-item" style="font-size:20px;  color:black; ">
                    @Html.DisplayFor(model => model.Last_name) @Html.DisplayFor(model => model.First_name) @Html.DisplayFor(model => model.S_name)
                </li>
            </ul>
            <div class=" navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse " style="padding-right:3%">
                <strong>@Html.DisplayFor(model => model.Language)</strong>
            </div>
        </nav>
    </header>
    <div class="wrapper" style="padding-left:5%; padding-right:5%; padding-top:1%; ">
        <main role="main" class="pb-3">
            <div class=" col-md-12 col-sm-12 col-lg-12 order-2">
                <div class="row">
                    
                </div>
            </div>
        </main>
    </div>

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">@Localizer["marking_c"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-12 col-sm-12 border-right border-left ">
                        <dl class="row d-flex justify-content-start">
                            <dt class="col-sm-9"> @Localizer["word"]:</dt>
                            <dd id="wordsmark" class="col-sm-3">
                                0
                            </dd>
                            <dt class="col-sm-9">
                                @Localizer["gramma"]:
                            </dt>
                            <dd id="grammark" class="col-sm-3">
                                2
                            </dd>
                            <dt class="col-sm-9">
                                @Localizer["speech"]:
                            </dt>
                            <dd id="spechmark" class="col-sm-3">
                                5
                            </dd>
                            <dt class="col-sm-9">
                                @Localizer["comunicative"]:
                            </dt>
                            <dd id="comumark" class="col-sm-3">
                                5
                            </dd>
                            <dt class="col-sm-9">
                                @Localizer["pronc"]:
                            </dt>
                            <dd id="promark" class="col-sm-3">
                                5
                            </dd>
                            <dt class="col-sm-9 ">
                                <u> <b>@Localizer["fullmark"]:</b></u>
                            </dt>
                            <dd id="allmarks" class="col-sm-3 ">
                                5
                            </dd>
                            <dt class="col-sm-7">
                                @Localizer["comment"]:
                            </dt>
                            <dd class="col-sm-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="finishtext" style="height: 100px"></textarea>
                                    <label for="finishtext">@Localizer["fullcomment"]</label>
                                </div>
                            </dd>
                        </dl>
                        <div id="komputer1" class="input-group p-4 mt-3 mb-3 col-sm-12 justify-content-center border-right border-left bg-warning">
                            <div class="form-check" onclick="ChangeText1()">
                                <input class="form-check-input" type="checkbox" value="kampcheck" id="defaultCheck">
                                <label class="form-check-label " for="defaultCheck">
                                    <b>@Localizer["mar_pas_m"]</b>
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button id="marked" onclick="seconmark()" type="button" disabled class="btn btn-danger">@Localizer["end"]</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function ChangeText1() {
            var chkb = document.getElementById('defaultCheck');

            if (!chkb.checked) {

                document.getElementById('komputer1').className = "input-group p-4 mt-3 mb-3 col-sm-12 justify-content-center border-right border-left bg-warning";

                document.getElementById("marked").disabled = true;

            }
            else {

                document.getElementById('komputer1').className = "input-group p-4 mt-3 mb-3 col-sm-12 justify-content-center border-right border-left bg-success ";

                document.getElementById("marked").disabled = false;

            }
        }
    </script>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/jquery-1.11.2.min.js"></script>
<script src="~/js/site.js"></script>